<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/residentListFragment">

    <fragment
        android:id="@+id/residentRegisterFragment"
        android:name="vn.edu.greenwich.mobile_cw1.ui.Trip.TripRegisterFragment"
        android:label="Create Trip"
        tools:layout="@layout/fragment_trip_create" />
    <fragment
        android:id="@+id/residentListFragment"
        android:name="vn.edu.greenwich.mobile_cw1.ui.Trip.list.TripListFragment"
        android:label="Trip List"
        tools:layout="@layout/fragment_trip_list"/>
    <fragment
        android:id="@+id/residentDetailFragment"
        android:name="vn.edu.greenwich.mobile_cw1.ui.Trip.TripDetailFragment"
        android:label="Trip Detail"
        tools:layout="@layout/fragment_trip_detail">
        <argument
            android:name="Resident"
            app:argType="vn.edu.greenwich.mobile_cw1.models.Trip" />
    </fragment>
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="vn.edu.greenwich.mobile_cw1.ui.info.AboutUsFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_about_us" />
    <fragment
        android:id="@+id/residentUpdateFragment"
        android:name="vn.edu.greenwich.mobile_cw1.ui.Trip.TripUpdateFragment"
        android:label="Trip Update"
        tools:layout="@layout/fragment_trip_update" />
</navigation>